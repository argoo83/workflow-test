<project name="workflow-test" basedir="." default="main">

    <!-- Properties & paths -->
    <property name="src.dir" value="src"/>
    <property name="out.dir" value="out"/>
    <property name="jar.dir" value="${out.dir}/jar"/>
    <property name="lib.dir" value="lib"/>
    <property name="test.dir" value="test"/>
    <property name="test.out.dir" value="${out.dir}/test"/>
    <property name="report.dir" value="${out.dir}/testreport"/>
    <property name="main.class" value="se.mlarsson.SquareDigits"/>
    <property name="debug.level" value="source,lines,vars"/>
    <path id="classpath">
        <fileset dir="${lib.dir}" includes="**/*.jar"/>
    </path>
    <path id="test.classpath">
        <fileset dir="${test.dir}" includes="**/*.class"/>
    </path>
    <path id="application" location="${jar.dir}/${ant.project.name}.jar"/>


    <!-- Targets -->
    <target name="clean" description="Clean all files and folders in output.">
        <delete includeEmptyDirs="true">
            <fileset dir="${out.dir}">
                <include name="*/**" />
            </fileset>
        </delete>
    </target>

    <target name="compile" description="Compile all src-files.">
        <mkdir dir="${out.dir}"/>
        <javac debug="true" debuglevel="${debug.level}" destdir="${out.dir}">
            <src path="src"/>
            <src path="test"/>
            <classpath>
                <path refid="classpath"/>
                <path refid="test.classpath"/>
            </classpath>
            <compilerarg value="-Xlint:all"/>
        </javac>
    </target>

    <target name="jar" depends="compile" description="Create jar-file.">
        <mkdir dir="${jar.dir}"/>
        <jar destfile="${jar.dir}/${ant.project.name}.jar" basedir="${out.dir}">
            <manifest>
                <attribute name="Main-Class" value="${main.class}"/>
            </manifest>
        </jar>
    </target>

    <target name="run" depends="jar" description="Create jar and run.">
        <java fork="true" classname="${main.class}">
            <classpath>
                <path refid="classpath"/>
                <path refid="application"/>
            </classpath>
        </java>
    </target>

    <target name="test" depends="compile" description="Run all tests.">
        <junit printsummary="withOutAndErr">
            <classpath>
                <path refid="classpath"/>
                <path refid="test.classpath"/>
            </classpath>
            <formatter type="plain" usefile="false"/>
            <batchtest fork="yes" todir="${report.dir}" failureProperty="test.failed">
                <fileset dir="${test.dir}" includes="**/*.class"/>
            </batchtest>
        </junit>
        <fail message="Test failure detected, check results." if="test.failed" />
    </target>

    <target name="testreport">
        <junitreport todir="${report.dir}">
            <fileset dir="${report.dir}" includes="TEST-*.xml"/>
            <report todir="${report.dir}"/>
        </junitreport>
    </target>

    <target name="clean-build" depends="clean,jar" description="Clean and build."/>

    <target name="main" depends="clean,run" description="Clean and run."/>

</project>