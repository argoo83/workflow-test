<?xml version="1.0" encoding="UTF-8"?>
<project name="workflow-test" default="all">
  
  
  <property file="build.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.egg"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
    <include name="*.apk"/>
    <include name="*.swc"/>
    <include name="*.war"/>
    <include name="*.ane"/>
    <include name="*.zip"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- Modules -->
  
  
  <!-- Module workflow-test -->
  
  <dirname property="module.workflow-test.basedir" file="${ant.file}"/>
  
  
  
  <property name="compiler.args.workflow-test" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="workflow-test.output.dir" value="${module.workflow-test.basedir}/out/production/workflow-test"/>
  <property name="workflow-test.testoutput.dir" value="${module.workflow-test.basedir}/out/test/workflow-test"/>
  
  <path id="workflow-test.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="workflow-test.module.production.classpath"/>
  
  <path id="workflow-test.runtime.production.module.classpath">
    <pathelement location="${workflow-test.output.dir}"/>
  </path>
  
  <path id="workflow-test.module.classpath">
    <pathelement location="${workflow-test.output.dir}"/>
    <pathelement location="${basedir}/lib/hamcrest-core-1.3.jar"/>
    <pathelement location="${basedir}/lib/junit-4.12.jar"/>
  </path>
  
  <path id="workflow-test.runtime.module.classpath">
    <pathelement location="${workflow-test.testoutput.dir}"/>
    <pathelement location="${workflow-test.output.dir}"/>
    <pathelement location="${basedir}/lib/hamcrest-core-1.3.jar"/>
    <pathelement location="${basedir}/lib/junit-4.12.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.workflow-test">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.workflow-test">
    <patternset refid="excluded.from.module.workflow-test"/>
  </patternset>
  
  <path id="workflow-test.module.sourcepath">
    <dirset dir="${module.workflow-test.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  <path id="workflow-test.module.test.sourcepath">
    <dirset dir="${module.workflow-test.basedir}">
      <include name="test"/>
    </dirset>
  </path>
  
  
  <target name="compile.module" depends="production,test" description="Compile module workflow-test"/>
  
  <target name="production" description="Compile module workflow-test; production classes">
    <mkdir dir="${workflow-test.output.dir}"/>
    <javac destdir="${workflow-test.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true">
      <compilerarg line="${compiler.args.workflow-test}"/>
      <bootclasspath refid="workflow-test.module.bootclasspath"/>
      <classpath refid="workflow-test.module.production.classpath"/>
      <src refid="workflow-test.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.workflow-test"/>
    </javac>
    
    <copy todir="${workflow-test.output.dir}">
      <fileset dir="${module.workflow-test.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="test" depends="production" description="compile module workflow-test; test classes" unless="skip.tests">
    <mkdir dir="${workflow-test.testoutput.dir}"/>
    <javac destdir="${workflow-test.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true">
      <compilerarg line="${compiler.args.workflow-test}"/>
      <bootclasspath refid="workflow-test.module.bootclasspath"/>
      <classpath refid="workflow-test.module.classpath"/>
      <src refid="workflow-test.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.workflow-test"/>
    </javac>
    
    <copy todir="${workflow-test.testoutput.dir}">
      <fileset dir="${module.workflow-test.basedir}/test">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module" description="cleanup module">
    <delete dir="${workflow-test.output.dir}"/>
    <delete dir="${workflow-test.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>